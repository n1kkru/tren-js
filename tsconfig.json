{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
      "@entities/*": ["src/entities/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/shared/assets/*"],
      "@images/*": ["src/shared/assets/images/*"],
    }
  }
}

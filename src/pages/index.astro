---
import Button from '@shared/ui/buttons/button/Button.astro'
import Layout from '@widgets/Layout/Layout.astro'

const pages = [
  {
    title: 'UI',
    href: 'ui'
  },
  {
    title: 'Главная',
    href: 'main'
  }
]
---

<Layout pageName="index">
  <h1 class="px-4 text-title-100 text-primary devices:text-title-40">Ссылки на страницы проекта</h1>

  <div class="mt-6 flex flex-col gap-4">
    {
      pages.map(page => (
        <Button
          href={`/main/${page.href}`}
          theme="spaced"
          class="w-fit"
        >
          {page.title}
        </Button>
      ))
    }
  </div>
</Layout>
